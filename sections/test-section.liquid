<button>{{ section.settings.example_text }}</button>

{% if section.settings.example_image != blank %}
  <img
    src="{{ section.settings.example_image.src | image_url }}"
    alt="Placeholder Image"
    width="150"
    height="150"
    style="width:150px; height:150px; object-fit:cover; border-radius:8px;"
  >
{% endif %}

{% schema %}
{
  "settings": [
    {
      "type": "text",
      "id": "example_text",
      "label": "Example Text",
      "default": "Click Me"
    },
    {
      "type": "image_picker",
      "id": "example_image",
      "label": "Example Image"
    }
  ],
  "presets": [
    {
      "name": "Test Section"
    }
  ]
}
{% endschema %}
